{
  "name": "@sls-monorepo/app",
  "license": "UNLICENSED",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend/*",
    "common/*",
    "frontend/*"
  ],
  "scripts": {
    "package": "lerna run --stream package",
    "package:since": "lerna run --stream --concurrency 3 package --include-dependencies --include-dependents --since",
    "build:since": "lerna run --stream --concurrency 3 build --include-dependencies --include-dependents --since",
    "build:staging:since": "lerna run --stream --concurrency 3 build:staging --include-dependencies --include-dependents --since",
    "build:production:since": "lerna run --stream --concurrency 3 build:production --include-dependencies --include-dependents --since",
    "watch": "lerna run --parallel watch",
    "deploy:dev": "yarn package && lerna run --stream --concurrency 2 deploy --scope @sls-monorepo/backend-*",
    "deploy:since": "lerna run --stream --concurrency 3 deploy --include-dependents --since",
    "deploy:staging:since": "lerna run --stream --concurrency 3 deploy:staging --include-dependents --since",
    "deploy:production:since": "lerna run --stream --concurrency 3 deploy:production --include-dependents --since",
    "info": "lerna run --stream sls:info",
    "remove:dev": "lerna run --stream --concurrency 2 remove --scope @sls-monorepo/backend-*",
    "test:since": "lerna run --stream --concurrency 3 test:all --include-dependents --since",
    "test:linter": "lerna run --stream --concurrency 2 test:linter",
    "test:prettier": "prettier --check .",
    "test:type": "lerna run --stream --concurrency 2 test:type",
    "test:stylelint": "lerna run --stream --concurrency 2 test:stylelint",
    "test:unit": "lerna run --stream --concurrency 2 test:unit",
    "lint:fix": "lerna run --stream --concurrency 2 lint:fix",
    "list:since": "lerna list --all --long --parseable --since"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "aws-sdk": "^2.773.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^4.3.8",
    "jest": "^26.6.0",
    "lerna": "^4.0.0",
    "lodash": "^4.17.20",
    "npm-audit-resolver": "^2.2.1",
    "prettier": "^2.3.2",
    "syncpack": "^5.6.10",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run --concurrency 1 --since HEAD --exclude-dependents --stream precommit"
    }
  },
  "engines": {
    "node": "^14.16.1",
    "yarn": "^1.22.5"
  }
}
